{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WaveformOS Pixel Cutter",
  "version": "0.1.0",
  "identifier": "com.waveformlabs.waveformpixelcutter",
  "build": {
    "frontendDist": "../app/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "WaveformOS Pixel Cutter",
        "width": 1180,
        "height": 720,
        "minWidth": 1040,
        "minHeight": 660,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
